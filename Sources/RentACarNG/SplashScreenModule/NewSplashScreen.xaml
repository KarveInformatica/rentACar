<Window x:Class="Karve.SplashScreenModule.NewSplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Karve.SplashScreenModule"
        Title="KarveRentACar"  WindowStartupLocation="CenterScreen" WindowStyle="None" 
        BorderBrush="White" Height="332" Width="539" BorderThickness="3" ShowInTaskbar="False" ResizeMode="NoResize">
    <Window.Background>
        <ImageBrush ImageSource="KarveCarImage.png"/>
    </Window.Background>

    <Grid Margin="0,0,0,0">
        <StackPanel Margin="5,260,0,33">
            <Label Margin="5" HorizontalContentAlignment="Stretch" Content="{Binding Source={x:Static local:MessageListener.Instance},Path=Message}" Height="22" HorizontalAlignment="Left" Name="label1" VerticalAlignment="Top" FontStyle="Italic" />
        </StackPanel>

<!--        <Label Height="25" Margin="35,0,33,25" Foreground="Black" Name="label2" VerticalAlignment="Bottom"
               Content="{Binding Source={x:Static local:MessageListener.Instance},Path=Message}"></Label>
        <ProgressBar Margin="5" HorizontalAlignment="Stretch" x:Name="progressBar1" Value="{Binding Percentage, Mode=OneWay}" Height="14"  />
-->
    </Grid>
</Window>
