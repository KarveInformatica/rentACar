        <TextBlock FontSize="20" Margin="0,50,0,0">
            Windows <Italic>Presentation</Italic> Foundation
        </TextBlock>
        <TextBlock Margin="0,100,0,0" FontFamily="Palatino Linotype" 
                   Typography.DiscretionaryLigatures="True"
                   Typography.ContextualLigatures="True" 
                   Typography.StandardLigatures="True">
            Quite effective find
        </TextBlock>
        <TextBlock FontSize="20" Margin="0,150,0,0" Typography.Capitals="SmallCaps"> 
            Hello World!!!
        </TextBlock>
        <TextBlock FontSize="20" Margin="0,200,0,0" Typography.Fraction="Stacked"> 
            1/2 + 1/4 = 3/4
        </TextBlock>
        <TextBlock FontSize="20" Margin="0,250,0,0" Typography.NumeralStyle="OldStyle"> 
            123456
        </TextBlock>
    </Grid>
