<Application x:Class="KRibbon.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:KRibbon"
             xmlns:lang="clr-namespace:KRibbon.Utility"
             xmlns:vm="clr-namespace:KRibbon.ViewModel.GenericViewModel"
             xmlns:ms="clr-namespace:KRibbon.ViewModel.MaestrosViewModel"
             xmlns:cfg="clr-namespace:KRibbon.ViewModel.ConfiguracionViewModel"
             StartupUri="View/MainWindow.xaml" Startup="Application_Startup">
    <Application.Resources>
        <ObjectDataProvider x:Key="ResourceLanguage" 
                            ObjectType="{x:Type lang:ChangeLanguage}" 
                            MethodName="GetResource">
        </ObjectDataProvider>
        <vm:CloseTabItemViewModel x:Key="closeTabItem"/>
        <vm:CloseWindowViewModel  x:Key="closeWindow"/>
        <vm:SetLanguagesViewModel x:Key="setLanguages"/>
        
        <ms:MostrarAuxiliaresViewModel x:Key="mostrarAuxiliares"/>

        <cfg:CintaOpcionesViewModel x:Key="cintaOpciones"/>

    </Application.Resources>
</Application>
