<Application x:Class="KRibbon.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:KRibbon"
             xmlns:lang="clr-namespace:KRibbon.Utility"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ObjectDataProvider x:Key="ResourceLanguage" 
                            ObjectType="{x:Type lang:ChangeLanguage}" 
                            MethodName="GetResourceInstance">
        </ObjectDataProvider>
    </Application.Resources>
</Application>
